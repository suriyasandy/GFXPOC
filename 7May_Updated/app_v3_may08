ROLL_WINDOW = 60
ANNUALIZE = np.sqrt(252)
PCT_THRESHOLD = 0.95
EVT_TAIL_PCT = 0.995

# Page config
st.set_page_config(page_title="FX Volatility App", layout="wide")
ROLL_WINDOW = st.sidebar.slider("Rolling Window (Days)", 20, 120, 60,step=10)
